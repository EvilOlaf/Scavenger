<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.cnaude</groupId>
  <artifactId>Scavenger</artifactId>
  <name>Scavenger</name>
  <version>1.3</version>
  <description>Item recovery on death. Based on SirHedgehog's code.</description>
  <url>http://dev.bukkit.org/server-mods/Scavenger/</url>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
        <includes>
          <include>plugin.yml</include>
        </includes>
      </resource>
      <resource>
        <directory>src/main/resources</directory>
        <excludes>
          <exclude>plugin.yml</exclude>
        </excludes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <minimizeJar>true</minimizeJar>
              <artifactSet>
                <includes>
                  <include>com.esotericsoftware.kryo</include>
                  <include>org.objenesis.instantiator</include>
                  <include>com.esotericsoftware.reflectasm</include>
                  <include>org.objectweb.asm</include>
                </includes>
              </artifactSet>
              <filters />
              <relocations>
                <relocation>
                  <pattern>com.esotericsoftware.kryo</pattern>
                  <shadedPattern>com.esotericsoftware.kryo</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.objenesis.instantiator</pattern>
                  <shadedPattern>org.objenesis.instantiator</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>com.esotericsoftware.reflectasm</pattern>
                  <shadedPattern>com.esotericsoftware.reflectasm</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.objectweb.asm</pattern>
                  <shadedPattern>org.objectweb.asm</shadedPattern>
                </relocation>
              </relocations>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <tasks>
                <copy />
              </tasks>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots />
      <id>sonatype-nexus-public</id>
      <name>SonaType public snapshots and releases repository</name>
      <url>https://oss.sonatype.org/content/groups/public</url>
    </repository>
  </repositories>
