  <modelVersion>4.0.0</modelVersion>
  <groupId>com.cnaude</groupId>
  <artifactId>Scavenger</artifactId>
  <name>Scavenger</name>
  <version>1.7-${build.number}</version>
  <description>Item recovery on death. Based on SirHedgehog's code.</description>
  <url>http://dev.bukkit.org/server-mods/Scavenger/</url>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
        <includes>
          <include>plugin.yml</include>
        </includes>
      </resource>
      <resource>
        <directory>src/main/resources</directory>
        <excludes>
          <exclude>plugin.yml</exclude>
        </excludes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.2</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <minimizeJar>true</minimizeJar>
              <artifactSet>
                <includes>
                  <include>org.yaml</include>
                </includes>
              </artifactSet>
              <filters />
              <relocations>
                <relocation>
                  <pattern>org.yaml</pattern>
                  <shadedPattern>com.cnaude.org.yaml</shadedPattern>
                </relocation>
              </relocations>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <source>1.7</source>
          <target>1.7</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <tasks>
                <copy />
                <exec>
                  <arg />
                </exec>
                <exec>
                  <arg />
                </exec>
              </tasks>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
